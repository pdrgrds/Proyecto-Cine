@model Models.Usuario

@{
    ViewBag.Title = "Login";
}
<div class="card formulario">
    <div class="card-header text-center">
        <h2>INICIO DE SESIÓN</h2>
        <div class="logo">
            <img src="~/IMAGENES/LOGO/Logo-CINE-hora.png">
        </div>
    </div>
    <div class="card-body">
        <form action="@Url.Action("ValidarUsuario", "Usuario")" id="formularioLogin" method="post">
            @if (TempData["mensaje"] != null)
            {
                <div class="alert alert-danger text-center" role="alert">
                    <strong> @TempData["mensaje"] </strong>
                </div>
            }
                <div class="form-group">
                    <input type="text" class="form-control" id="usu" name="usu" placeholder="usuario" required>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" id="contraseña" name="contraseña" placeholder="contraseña" required>
                </div>

                <button type="submit" class="btn btn-primary btn-sm">Iniciar Sesion</button>
                <br />
                <div class="forget_pass mt-15">

                    <a href="#">Olvidaste contraseña?</a>
                </div>
            
            </form>
        

        </div>
</div>
